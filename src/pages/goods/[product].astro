    color: #fff;
    background-color: #000000;
    border-color: #000000;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }
}

.section__flex {
  display: block;
  overflow: clip;
   width: 95%;
   margin: auto;
  .text-data {
    margin-top: 40px;
    font-size: 16px;
    color: #333;
    text-align: left;
    padding: 0 ;

  }
}




