  .section__flex {
    width: 80%;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-top: 50px;
    #main-slider {
      width: 60%;
    }
    .product-info {
      width: 30%;
    }
    #thumbnail-slider {
      width: 100%;
    }
  }

  .section__flex {
  overflow: clip;
